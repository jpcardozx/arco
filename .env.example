# Supabase Configuration
# These environment variables are required for the application to work
# Copy this file to .env.local and fill in your values

# Supabase Project URL
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url

# Supabase Anonymous Key (Public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (Server-side only, for admin operations)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Mercado Pago Configuration (for payment processing)
NEXT_PUBLIC_MERCADOPAGO_PUBLIC_KEY=your_mercadopago_public_key
MERCADOPAGO_ACCESS_TOKEN=your_mercadopago_access_token

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# PostHog (Product Analytics)
# Get your API key from: https://app.posthog.com/project/settings
NEXT_PUBLIC_POSTHOG_KEY=phc_your_key_here
NEXT_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Google Analytics (Optional)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Analytics Features
NEXT_PUBLIC_ANALYTICS_ENABLED=true
NEXT_PUBLIC_ANALYTICS_DEBUG=false
NEXT_PUBLIC_ANALYTICS_AUTO_TRACK=true
NEXT_PUBLIC_ANALYTICS_CONSENT_MODE=true

# Optional: Add other analytics keys here if needed

# =============================================================================
# META CONVERSIONS API
# =============================================================================
# Dataset ID from Meta Events Manager (formerly Pixel ID)
# Find at: https://business.facebook.com/events_manager -> Your Dataset -> Settings
META_DATASET_ID=1574079363975678

# Access Token from Meta Events Manager -> Settings -> Conversions API
# Generate new token with 'ads_management' permission
# IMPORTANT: Keep this secret! Never commit to git or expose to frontend
META_CONVERSION_API_TOKEN=your_meta_access_token_here

# Optional: Test Event Code for testing events without affecting production data
# Configure at: Meta Events Manager -> Test Events tab
# Use this to validate your integration before sending real data
META_TEST_EVENT_CODE=TEST12345
